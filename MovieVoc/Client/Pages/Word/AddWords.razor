@page "/word/addwords"
@inject NavigationManager navigationManager
@inject MovieRepository movieRepository

<h3>Wörter der Datenbank zufügen</h3>

<div>
    <label>Wort:</label>
    <div>
        <input @bind="Word" />
    </div>
</div>
<div>
    <label>Uebersetzung</label>
    <div>
        <input type="text" @bind="Translation" />
    </div>
</div>
<div>
    <label>Schwierigkeits Level</label>
    <div>
        <input @bind="DifficultyLevel" />
    </div>
</div>

<button class="btn btn-primary" @onclick="addWordsToList">Wort zufügen</button>

<WordSelector SelectedWords="words"></WordSelector>

<button class="btn btn-primary" @onclick="addWordsToDatabase">Alle Selektierten Wörter der Datenbank zufügen</button>



@code {
    public string Word { get; set; }
    public string Translation { get; set; }
    public int DifficultyLevel { get; set; }

    List<WordDTO> words = new List<WordDTO>();

    private void addWordsToList()
    {
        WordDTO newWord = new WordDTO();
        newWord.EnglischWord = this.Word;
        newWord.Translation = this.Word;
        newWord.DifficultyLevel = this.DifficultyLevel;

        words.Add(newWord);

        this.Word = "";
        this.Translation = "";
        this.DifficultyLevel = 0;
        StateHasChanged();

    }

    private void addWordsToDatabase()
    {


    }

}
